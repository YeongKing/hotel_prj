<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="database.properties" />
	

  
	
	<!-- typeAlias예시 -->
	<typeAliases>
		<typeAlias type="kr.co.sist.elysian.admin.member.model.domain.MemberListDomain" alias="mld"/> 
		<typeAlias type="kr.co.sist.elysian.admin.member.model.domain.MemberDomain" alias="md"/> 
		<typeAlias type="kr.co.sist.elysian.admin.room.model.domain.RoomListDomain" alias="rld"/> 
		<typeAlias type="kr.co.sist.elysian.admin.room.model.domain.RoomDomain" alias="rd"/> 
		<typeAlias type="kr.co.sist.elysian.admin.dining.model.domain.DiningListDomain" alias="dld"/> 
		<typeAlias type="kr.co.sist.elysian.admin.dining.model.domain.DiningDomain" alias="dd"/> 
		<typeAlias type="kr.co.sist.elysian.admin.board.event.model.domain.EventListDomain" alias="eld"/> 
		<typeAlias type="kr.co.sist.elysian.admin.board.event.model.domain.EventDomain" alias="ed"/> 
		<typeAlias type="kr.co.sist.elysian.admin.board.qna.model.domain.QnaListDomain" alias="qld"/> 
		<typeAlias type="kr.co.sist.elysian.admin.board.qna.model.domain.QnaDomain" alias="qd"/> 
		<typeAlias type="kr.co.sist.elysian.admin.board.notice.model.domain.NoticeListDomain" alias="nld"/> 
		<typeAlias type="kr.co.sist.elysian.admin.board.notice.model.domain.NoticeDomain" alias="nd"/> 
		<typeAlias type="kr.co.sist.elysian.admin.login.model.vo.AdminVO" alias="av"/> 
		<typeAlias type="kr.co.sist.elysian.admin.login.model.domain.AdminDomain" alias="ad"/> 
	</typeAliases>
  
  <!-- 환경 설정 -->
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${connectionURL}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>

  <!-- 매퍼 위치 설정 -->
  <mappers>
    <mapper resource="mapper/admin/DashboardMapper.xml"/>
    <mapper resource="mapper/admin/MemberMapper.xml"/>
    <mapper resource="mapper/admin/RoomMapper.xml"/>
    <mapper resource="mapper/admin/DiningMapper.xml"/>
	<mapper resource="mapper/admin/EventMapper.xml"/>
	<mapper resource="mapper/admin/QnaMapper.xml"/>
	<mapper resource="mapper/admin/NoticeMapper.xml"/>
	
    <mapper resource="mapper/admin/LoginMapper.xml"/>
    <!-- 매퍼 추가되면 활성화 시켜주세요! -->
<!--     
    <mapper resource="mapper/admin/HomeMapper.xml"/>

    <mapper resource="mapper/admin/ResMapper.xml"/>
     -->
  </mappers>
  

</configuration>